<mujoco model="robot_on_stairs_with_ground">
    <compiler angle="radian" coordinate="local"/>
    <option gravity="0 0 -9.81" timestep="0.001"/>

    <asset>
        <!-- Robot assets -->
        <mesh name="controller_torso" file="./controller_torso.stl" scale="0.001 0.001 0.001"/>
        <mesh name="motor_torso" file="./motor_torso.stl" scale="0.001 0.001 0.001"/>
        <mesh name="legs" file="./legs.stl" scale="0.001 0.001 0.001"/>

        <!-- Ground material -->
        <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1="0.8 0.8 0.8" rgb2="0.6 0.6 0.6"/>
        <material name="grid_material" texture="grid" texrepeat="5 5" reflectance="0.2"/>
    </asset>

    <worldbody>
        <!-- Ground -->
        <geom name="ground" type="plane" pos="0 0 0" size="5 5 0.25" material="grid_material" rgba="0.8 0.8 0.8 1"/>

        <!-- Stairs -->
        <geom name="stair_1" type="box" pos="0 0 0.025" size="0.5 0.5 0.025" rgba="0.6 0.6 0.6 1"/>
        <geom name="stair_2" type="box" pos="0.5 0 0.075" size="0.5 0.5 0.025" rgba="0.6 0.6 0.6 1"/>
        <geom name="stair_3" type="box" pos="1.0 0 0.125" size="0.5 0.5 0.025" rgba="0.6 0.6 0.6 1"/>
        <geom name="stair_4" type="box" pos="1.5 0 0.175" size="0.5 0.5 0.025" rgba="0.6 0.6 0.6 1"/>
        <geom name="stair_5" type="box" pos="2.0 0 0.225" size="0.5 0.5 0.025" rgba="0.6 0.6 0.6 1"/>
        <geom name="stair_6" type="box" pos="2.5 0 0.275" size="0.5 0.5 0.025" rgba="0.6 0.6 0.6 1"/>

        <!-- Robot -->
        <body name="controller_torso_body" pos="-0.5 0 0.05" euler="-1.57 3.14 0">
            <joint name="FLOATING" type="free"/>
            <geom type="mesh" mesh="controller_torso" rgba="1.0 0.502 0.545 1"/>
            
             <!-- Adding a camera -->
            <camera euler="0.8 0 3.14152" fovy="60" name="main_camera" pos="0.05 -0.05 0" />

            <!-- Motor torso -->
            <body name="motor_torso_body" pos="0 0 0.11">
                <joint name="z_rotation_joint" type="hinge" axis="0 0 1" pos="0.025 0.02 0" range="-1.57 1.57" damping="0.05"/>
                <geom type="mesh" mesh="motor_torso" rgba="1.0 0.502 0.545 1"/>
                
                <!-- Back Leg -->
                <body name="back_leg" pos="-0.065 0.0497 0.08" euler="3.14 0 0">
                    <joint axis="0 1 0" damping="0.05" name="LEG2" pos="0.088 0.02 0.015" range="-1.5707963 1.5707963" type="hinge"/>
                    <geom type="mesh" mesh="legs" rgba="0.471 0.824 0.243 1"/>
                </body>
            </body>

            <!-- Front Leg -->
            <body name="front_leg" pos="-0.065 0.0497 0.05" euler="3.14 0 0">
                <joint axis="0 1 0" damping="0.05" name="LEG1" pos="0.088 0.02 0.015" range="-1.5707963 1.5707963" type="hinge"/>
                <geom type="mesh" mesh="legs" rgba="0.471 0.824 0.243 1"/>
            </body>
        </body>

        <!-- Light -->
        <light name="main_light" pos="0 0 5" dir="0 0 -1" diffuse="1 1 1" specular="0.3 0.3 0.3" directional="true"/>
    </worldbody>

    <!-- Actuators -->
    <actuator>
        <motor joint="z_rotation_joint" name="z_rotation_joint_act"/>
        <motor joint="LEG1" name="LEG1_act"/>
        <motor joint="LEG2" name="LEG2_act"/>
    </actuator>
</mujoco>